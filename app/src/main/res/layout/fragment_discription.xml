<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.a1.tutorial.fragments.FragmentDiscription">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="false"
        android:id="@+id/imageDiscription"
        android:layout_above="@+id/backBtn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theory"
        android:scaleType="centerCrop"
        android:paddingLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/discription"
        android:layout_above="@+id/backBtn" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@color/backtheory"
        android:text="К списку тем" />


</RelativeLayout>
